<h3 class="offset-2">Edit Profile</h3>

<div class="col-8 offset-2 mt-5">
  <%= form_with model: @user, local: true do |f| %>

    <div class="form-group row">
      <div class="col-4"><%= f.label :ProfileImage %></div>
      <div class="col-8"><%= f.attachment_field :profile_image %></div>
    </div>

    <div class="form-group row mt-3">
      <div class="col-4"><%= f.label :Name %></div>
      <div class="col-8"><%= f.text_field :name, class:"form-control" %></div>
    </div>

    <div class="form-group row mt-3">
      <div class="col-4"><%= f.label :Email %></div>
      <div class="col-8"><%= f.text_field :email, class:"from-control" %></div>
    </div>

    <div class="text-center mt-5">
      <%= f.submit "更新", class: "btn btn-outline-success", style: "width:120px" %>
    </div>

  <% end %>