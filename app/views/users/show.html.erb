<h3 class="offset-2">Profile</h3>

<div class="col-8 offset-2 mt-5">

    <div class="form-group row">
      <div class="col-4">profile_image</div>
      <div class="col-8"><%= attachment_image_tag @user, :profile_image, :fill, 50, 50, format: 'jpeg', fallback: "no_image.jpg" %></div>
    </div>

    <div class="form-group row mt-3">
      <div class="col-4">Name</div>
      <div class="col-8"><%= @user.name%></div>
    </div>

    <div class="form-group row mt-3">
      <div class="col-4">Email</div>
      <div class="col-8"><%= @user.email %></div>
    </div>
    
    <div class="form-group row mt-3">
      <div class="col-4"></div>
      <div class="col-8">
        <% if @user.id == current_user.id %>
          <p><%= link_to "プロフィール編集", edit_user_path(@user), class:"btn btn-outline-danger btn-sm mt-3" %></p>
        <% end %>
      </div>
    </div>
</div>