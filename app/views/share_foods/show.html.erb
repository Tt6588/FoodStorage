<h3>食材データ　-　
  <%= render "layouts/member-button", list: @group %>
  <%= link_to " -  一覧へ  - ", group_share_foods_path, class: "btn btn-outline-primary ml-4" %>
</h3>

<div class="row rounded border shadow ">
  <div class="col-sm-auto col-lg-4 mt-2 mb-2">
    <%= attachment_image_tag @share_food, :image, class:"w-40 img-fluid img-thumbnail shadow", format: 'jpeg', fallback: "no_image.jpg" %>
  </div>

  <div class="col-sm-12 col-lg-4 mt-2 mb-2">
    <div class="row">
      <div class="col-3">食材名</div>
      <div class="col-auto"><%= @share_food.food_name %></div>
    </div>
    <div class="row">
      <div class="col-3">食材情報</div>
      <div class="col-auto"><p><%= @share_food.detail %></p></div>
    </div>
    <div class="row">
      <div class="col-3">コメント</div>
      <div class="col-auto"><%= @share_food.share_comments.count %>件</div>
    </div>
    <div class="row">
      <div class="col-3">ジャンル</div>
      <div class="col-auto"><%= @share_food.genre %></div>
    </div>
    <div class="row">
      <div class="col-3">個数</div>
      <div class="col-auto"><%= @share_food.quantity %></div>
    </div>
    <div class="row">
      <div class="col-3">消費期限</div>
      <div class="col-auto"><%= @share_food.deadline_time.strftime('%Y/%m/%d') %></div>
    </div>
    <div class="row">
      <div class="col-3"></div>
      <div class="col-auto"><%= link_to "編集", "/groups/#{@group.id}/share_foods/#{@share_food.id}/edit", class:"btn btn-outline-dark btn-sm mt-3" %></div>
    </div>
  </div>

  <div class="col-sm col-lg-4 mt-2 mb-5">
    <div class="position-relative" style="top:30px;">
      <%= form_with(model: @share_comment, url:"/groups/#{@group.id}/share_foods/#{@share_food.id}/share_comments", local: true) do |f| %>
        <%= f.text_area :comment, rows:'5',placeholder: "例：カレーに使用します。使わないで！", class:"mb-1 form-control" %>
        <%= f.submit "コメント追加" , class:"btn btn-dark btn-sm"%>
      <% end %>
    </div>
  </div>
</div>

<div class="mt-3">
  <% @share_food.share_comments.each do |share_comment| %>
    <div class="row rounded border shadow-sm text-wrap">
      <!--#共有食材管理でコメントユーザーに変更して使用します-->
      <div class="col-1">
        <!--< attachment_image_tag share_comment.user_id, :profile_image, :fill, 50, 50, class:" img-fluid img-thumbnail shadow" %>-->
      </div>
      <!--#イメージにuserへのパス-->

      <div class="col-1">
        <%= share_comment.created_at.strftime('%m/%d') %>
      </div>
      <div class="col-auto">
        <p><%= share_comment.comment %></p>
      </div>
        <% if share_comment.user_id == current_user.id %>
        <div class="col-1">
          <%= link_to "削除", "/groups/#{@group.id}/share_foods/#{@share_food.id}/share_comments/#{share_comment.id}", method: :delete, class:"btn btn-outline-danger btn-sm mt-1 mb-1" %>
        </div>
        <% end %>
    </div>
  <% end %>
</div>