<h3>食材データ　-
  <%= render "layouts/member-button", list: @group %>
  <%= link_to " -  一覧へ  - ", group_share_foods_path, class: "btn btn-outline-primary ml-4" %>
</h3>

   <!--popover動作用js-->
  <%= render "layouts/popover" %>

<div class="row rounded border shadow ">
  <div class="col-sm-auto col-lg-4 mt-2 mb-2">
    <%= attachment_image_tag @share_food, :image, class:"w-40 img-fluid img-thumbnail shadow", format: 'jpeg', fallback: "no_image.jpg" %>
  </div>

  <div class="col-sm-12 col-lg-4 mt-2 mb-2">
    <div class="row">
      <div class="col-3">食材名</div>
      <div class="col-auto"><%= @share_food.food_name %></div>
    </div>
    <div class="row">
      <div class="col-3">食材情報</div>
      <div class="col-auto"><p><%= @share_food.detail %></p></div>
    </div>
    <div class="row">
      <div class="col-3">コメント</div>
      <div class="col-auto"><%= @share_food.share_comments.count %>件</div>
    </div>
    <div class="row">
      <div class="col-3">ジャンル</div>
      <div class="col-auto"><%= @share_food.genre %></div>
    </div>
    <div class="row">
      <div class="col-3">個数</div>
      <div class="col-auto"><%= @share_food.quantity %></div>
    </div>
    <div class="row">
      <div class="col-3">消費期限</div>
      <div class="col-auto"><%= @share_food.deadline_time.strftime('%Y/%m/%d') %></div>
    </div>
    <div class="row">
      <div class="col-3"></div>
      <div class="col-auto"><%= link_to "編集", "/groups/#{@group.id}/share_foods/#{@share_food.id}/edit", class:"btn btn-outline-dark btn-sm mt-3" %></div>
    </div>
  </div>

  <div class="col-sm col-lg-4 mt-2 mb-5">
    <%= render 'share_comments/new_share_comment', share_food: @share_food, share_comment: @share_comment, group: @group %>
  </div>
</div>

<div class="mt-3" id="share_comments">
  <%= render 'share_comments/comments', share_food: @share_food, group: @group %>
</div>