<h3 class="offset-1">共有食糧庫-<%= @group.name %></h3>

<div class="row">
  <div class="col-md col-lg-4">
  <%= form_with model: [@group, @share_food], local: true do |f| %>
    <div class="form-group row mt-3">
      <div class="col-md">食材名</div>
      <div class="col-md"><%= f.text_field :food_name, class: "form-control" %></div>
    </div>

    <div class="form-group row mt-1">
      <div class="col-md"><%= f.label :食材情報 %></div>
      <div class="col-md"><%= f.text_area :detail, class: "form-control" %></div>
    </div>
    
    <div class="form-group row mt-1">
      <div class="col-md"><%= f.label :ジャンル %></div>
      <div class="col-md"><%= f.text_field :genre, class: "form-control" %></div>
    </div>
    
    <div class="form-group row mt-1">
      <div class="col-md col-lg-3"><%= f.label :食材画像 %></div>
      <div class="col-md"><%= f.attachment_field :image %></div>
    </div>
    
    <div class="form-group row mt-1">
      <div class="col-md"><%= f.label :個数 %></div>
      <div class="col-md"><%= f.select :quantity, options_for_select((1..10).to_a) %></div>
    </div>
    <div class="form-group row mt-1">
      <div class="col-md"><%= f.label :消費期限 %></div>
      <div class="col-md"><%= f.datetime_select :deadline_time %></div>
    </div>

    <div class="form-group row mt-1">
      <div class="col-md"><%= link_to " -  食材一覧へ  - ", group_share_foods_path(@group.id), class: "btn btn-outline-dark ml-4" %></div>
      <div class="col-md"><%= f.submit '作成', class: "btn btn-outline-success" %></div>
    </div>
  <% end %>
  </div>
  
  <div class="col-sm col-md col-lg-8">
    <%= month_calendar events: @share_foods do |date, share_foods| %>
      <%= date.day %>
      <% if share_foods.present? %>
      <div class="dropdown">
        <button type="button" id="dropdown1" class="btn btn-outline-secondary dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false"></button>
        <div class="dropdown-menu" aria-labelledby="dropdown1">
          <% share_foods.each do |share_food| %>
            <div>
              <%= link_to share_food.food_name, "/groups/#{@group.id}/share_foods/#{share_food.id}", class:"btn btn-light" %>
            </div>
          <% end %>
        </div>
      </div>
      <% end %>
    <% end %>
  </div>
  
</div>