<h3 class="offset-1">食材一覧
  <%= link_to " -  食糧庫へ  - ", new_food_path, class: "btn btn-outline-primary ml-4" %></h3>
<div class="mt-3">
  <div class="card-list-container-fluid pt-3">
    <div class="row">

      <% @foods.each do |food| %>
        <div class="card mr-2 mt-4 shadow-lg">
          <div class="card-body">
            <%= link_to food_path(food.id) do %>
              <p><%= attachment_image_tag food, :image, :fill, 200, 150 ,class:"card-img-top py-2 px-2", format: 'jpeg', fallback: "no_image.jpg" %></p>
            <% end %>
            <div class="card-title"><%= food.food_name %></div>
            <div><%= "#{food.comments.count} コメント" %></div>
            <div>ジャンル：<%= food.genre %></div>
            <div>消費期限：<%= food.deadline_time.strftime('%Y/%m/%d') %></div>
          </div>
        </div>
      <% end %>

    </div>
  </div>
</div>