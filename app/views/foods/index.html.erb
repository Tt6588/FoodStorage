<h1>foods/index</h1>


<% @foods.each do |food| %>
  <div>
    <p><%= attachment_image_tag food, :image, :fill, 300, 250 %></p>
    <p>食材画像：<%= food.image %></p>
    <p>食材名：<%= food.food_name %></p>
    <p>ジャンル：<%= food.genre %></p>
    <p>消費期限：<%= food.deadline_time.strftime('%Y/%m/%d') %></p>
    <%= link_to "show", food_path(food.id) %>
  </div>
<% end %>