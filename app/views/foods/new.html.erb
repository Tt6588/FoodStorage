<h3 class="offset-1">食糧庫</h3>
  <%= form_with model: @food, local: true do |f| %> 
    <div class="form-group row">
      <div class="col-2">食材名</div>
      <div><%= f.text_field :food_name, class: "form-control" %></div>
    </div>

    <div class="form-group row mt-3">
      <div class="col-2"><%= f.label :食材情報 %></div>
      <div><%= f.text_area :detail, class: "form-control" %></div>
    </div>
    
    <div class="form-group row mt-3">
      <div class="col-2"><%= f.label :ジャンル %></div>
      <div><%= f.text_field :genre, class: "form-control" %></div>
    </div>
    
    <div class="form-group row mt-3">
      <div class="col-2"><%= f.label :食材画像 %></div>
      <div><%= f.attachment_field :image %></div>
    </div>
    
    <div class="form-group row mt-3">
      <div class="col-2"><%= f.label :個数 %></div>
      <div><%= f.select :quantity, options_for_select((1..10).to_a) %></div>
    </div>
    <div class="form-group row mt-3">
      <div class="col-2"><%= f.label :消費期限 %></div>
      <div><%= f.datetime_select :deadline_time %></div>
    </div>

    <div class="text-left ml-4">
      <%= f.submit '作成', class: "btn btn-success" %>
    </div>
    <%= link_to "index", foods_path %>
  <% end %>
</div>