<% share_food.share_comments.each do |share_comment| %>
  <div class="row rounded border shadow-sm text-wrap">
    <div class="col-1">
      <%= share_comment.created_at.strftime('%m/%d') %>
    </div>
    <div class="col-auto">
      <p><%= share_comment.comment %></p>
    </div>
    <% if share_comment.user_id == current_user.id %>
      <div class="col-1">
        <%= link_to "削除", "/groups/#{group.id}/share_foods/#{share_food.id}/share_comments/#{share_comment.id}", method: :delete, remote: true, data:{ confirm: '本当に削除しますか？', cancel: '取り消す',commit: '削除'}, title: '削除確認', class:"btn btn-outline-danger btn-sm mt-1 mb-1" %>
      </div>
    <% end %>
  </div>
<% end %>