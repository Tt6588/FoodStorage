<!DOCTYPE html>
<html>
  <head>
    <title>FoodStorage</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= favicon_link_tag('favicon.ico') %>
  </head>

  <body>
    <header class="shadow-lg">
      <nav class="navbar navbar-expand-lg navbar-light">
        <div class="container">
          <div><%= link_to image_tag("logo2.PNG", size: "200x70"), root_path, class:"btn btn-outline-secondary"%></div>

          <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>

          <div class="collapse navbar-collapse " id="navbarNavDropdown">
            <ul class="navbar-nav ml-auto">
              <% if user_signed_in? %>
                <li class="mt-sm-2 mr-1">
                  <%= link_to 'profile', user_path(current_user.id), class:"btn btn-outline-primary btn-block btn-lg mb-1 font-italic" %>
                </li>
                <li class="mt-sm-2 mr-1">
                  <%= link_to "Storage", new_food_path, class:"btn btn-outline-warning btn-block btn-lg mb-1 font-italic" %>
                </li>
                <li class="mt-sm-2 mr-1">
                  <%= link_to "Share-Storage", groups_path, class:"btn btn-outline-danger btn-block btn-lg mb-1 font-italic" %>
                </li>
                <li class="mt-sm-2 mr-1">
                  <%= link_to "log out", destroy_user_session_path, method: :delete, class:"btn btn-outline-dark btn-block btn-lg font-italic" %>
                </li>
              <% else %>
                <li class="mt-sm-2 mr-1">
                  <%= link_to "About", about_path, class:"btn btn-outline-secondary btn-block btn-lg mb-1 font-italic" %>
                </li>
                <!--<li class="btn btn-outline-success mb-1">-->
                <!--  なんか考えます-->
                <!--</li>-->
                <li class="mt-sm-2 mr-1">
                  <%= link_to "sign up", new_user_registration_path, class:"btn btn-outline-danger btn-block btn-lg mb-1 font-italic" %>
                </li>
                <li class="mt-sm-2 mr-1">
                  <%= link_to "log in", new_user_session_path, class:"btn btn-outline-primary btn-block btn-lg mb-1 font-italic" %>
                </li>
              <% end %>
            </ul>
          </div>

        </div>
      </nav>
    </header>

    <main style="margin-bottom:80px">
      <div class="container-fluid  p-lg-5">
        <p class="alert alert-success comment_success shadow">コメントしました</p>
        <p class="alert alert-danger comment_alert shadow">コメントを取り消しました</p>
        <% if notice %>
          <p class="alert alert-success shadow"><%= notice %></p>
        <% end %>
        <% if alert %>
          <p class="alert alert-danger shadow"><%= alert %></p>
        <% end %>
        <div class="mt-sm-3 pr-3 pl-3">
          <%= yield %>
        </div>
      </div>
    </main>

    <footer class="fixed-bottom bg-white shadow", style="height:40px">
      <div class="container">
        <div class="footer_copyright text-center font-italic mt-2">
          © 2021 FoodStorage TatsuyaSato
        </div>
      </div>
    </footer>

  </body>
</html>
